{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:angular-eslintMonorepo",
    "group:eslintMonorepo",
    "group:typescript-eslintMonorepo"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "matchPackageNames": [
        "ng-packagr",
        "@angular/{/,}**",
        "@angular-devkit/{/,}**"
      ],
      "groupName": "angular"
    }
  ]
}
